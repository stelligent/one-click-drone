{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Current Mocha Test",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "args": [
        "--timeout",
        "0",
        "--colors",
        "--bail",
        "--debug",
        "--check-leaks",
        "--full-trace",
        "--inline-diffs",
        "--use_strict",
        "${file}"
      ],
      "internalConsoleOptions": "openOnSessionStart",
      "env": {
        "CHOMA_SEED": "0",
        "NODE_ENV": "development",
        "DEBUG": "reedus*"
      }
    }
  ]
}
